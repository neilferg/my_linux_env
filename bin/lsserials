#!/bin/sh

#set -x

lsserials ()
{
    local bus
    local device
    local hdr=0

    lsusb |
    while read -r line; do
        if [ "${line}" != "${line##*Serial}" ]; then
            bus=${line#Bus }
            bus=${bus%% *}

            device=${line#*Device }
            device=${device%%:*}

            id=${line#*ID }
            id=${id%% *}

            serialno=$(udevadm info -p $(udevadm info -q path -n /dev/bus/usb/${bus}/${device}) | fgrep 'ID_SERIAL_SHORT')
            serialno=${serialno##*=}

            #serialno=$(sudo lsusb -D /dev/bus/usb/${bus}/${device} 2> /dev/null | fgrep 'iSerial')
            #serialno=${serialno##* }

            if [ ${hdr} -eq 0 ]; then
                echo "bus/dev  pci ID    serial number"
                echo "--------------------------------"
                hdr=1
            fi

            echo "${bus}/${device}: ${id} ${serialno}"
        fi
    done
}

##

lsserials

